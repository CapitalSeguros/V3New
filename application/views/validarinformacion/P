                        <script type="text/javascript">
    function cantCaracteres(object){
           
       if(object.value.length>300){
         var valor=object.value.slice(0,300);
         object.value=valor;
       }else{
        document.getElementById("labelContador").innerHTML=object.value.length+" de 300";
       }
    }
</script>
